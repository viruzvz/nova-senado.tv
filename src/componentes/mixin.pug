mixin card(classes, href, src, time, record, txt, txt1, txt2)
  .cut.mb-4.card-overley(class= classes)
    a(href= href).dp-change-main-video.card.rounded-0.border-0.link--card
      .embed-x.Embed--3by2
        .hoverplay.middle
          .fa-stack
            i.fa.fa-circle.fa-stack-1x.cut.size--large.ml-1
            i.fa.fa-play-circle.fa-stack-1x.gray-dark.size--xlarge
        img.rounded-0.card-img(src= src alt='card')
      if time
        time.timer.bg-black.px-2.white(text='1:53:33') 1:53:33
      else
      if record
        .record.p-3.shadowc.white
          .record-live.bg-red-cord
          span.size--small.ml-1.mr-1.font-weight-bold AO VIVO
      else
      .card-body.p-3
        p.size--regular.blue-play.font-weight-bold.card-title
          = txt
        p.size--regular.mb-1.card-subtitle
          = txt1
        p.size--regular.card-text
          = txt2